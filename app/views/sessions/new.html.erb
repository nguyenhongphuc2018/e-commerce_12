<% provide :title, t(".login") %>
<h1><%= t ".login" %></h1>
<div class="row">
  <div class="col-sm-10 col-sm-offset-1 col-md-4 col-md-offset-4">
    <div class="text-center">
      <%= link_to :login_facebook do %>
        <i class="fa fa-facebook-official fa-fw fa-3x icon-fb"></i>
      <% end %>
      <%= link_to :login_google do %>
        <i class="fa fa-google fa-fw fa-3x icon-gg"></i>
      <% end %>
    </div>
    <%= form_for :session, url: login_path do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= link_to t(".forgot_pass"), new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t ".remember" %></span>
      <% end %>

      <%= f.submit t(".login"), class: "btn btn-primary" %>
    <% end %>
    <p><%= t ".new_user" %> <%= link_to t("signnow"), signup_path %></p>
  </div>
</div>
