<div class="col-md-3 col-sm-6 col-xs-12"> 
  <div class="thumbnail">
    <%= link_to  product_path(product), title: product.name, 
      data: {toggle:"tooltip" ,placement:"right"}  do %>
      <%= image_tag product.show_img, class: "img-responsive"%>
    <% end %>  
    <% if product.new_product? %>
      <span class="new-tag"><%= t ".new" %></span>
    <% end %>
    <span class="sale-tag">
      <span class="sale"></span>
    </span>
    <div class="caption">
      <p class="h4 name"><%= product.name %></p>
      <p class="h5 price">
        <%= t(:money).html_safe + " " + product.price.to_s %>
      </p>
      <span>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
      </span>
      <%= link_to product_path(product), class: "btn btn-success ml-15" do %>
        <span class="glyphicon glyphicon-shopping-cart"></span> <%= t ".cart" %>
      <% end %>
    </div>
  </div>
</div>
